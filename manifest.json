{
  "manifest_version": 3,
  "name": "Spotify Auth Demo",
  "version": "1.0",
  "description": "Chrome Extension with Spotify OAuth",
  "permissions": ["identity"],
  "host_permissions": [
    "https://accounts.spotify.com/"
  ],
  "oauth2": {
    "client_id": "f238e78051674b70910026fe7b299299",
    "scopes": [
      "user-read-private",
      "user-read-email"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}